clase : Usuario
	Propiedades
		nombre : "Juan" 
		apellido : "Gonzales" 
		temasAprendidos: ['Lógica', 'Ciclos']

	Metodos
		saludar()
      comienzo
        imprimir "Hola " + this.nombre + " " + this.apellido
      fin

      agregarTemaAprendido(tema)
      comienzo
          this.temasAprendidos.agregar(tema)
      fin

      sobreMi()
      comienzo
          imprimir "Mi nombre es " + propiedad.nombre + " y aprendí " + propiedad.temasAprendidos.total()
      fin


